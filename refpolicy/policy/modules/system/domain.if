#
# domain_entry_file(domain,entrypointfile)
#
interface(`domain_entry_file',`
	gen_require(`
		attribute entry_type;
		class file entrypoint;
	')

	files_file_type($2)
	allow $1 $2:file entrypoint;
	typeattribute $2 entry_type;
')

