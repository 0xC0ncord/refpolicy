allow initrc_t xconsole_device_t:fifo_file setattr;

# for lsof in shutdown scripts
can_kerberos(initrc_t)
dontaudit initrc_t krb5_conf_t:file write;
allow initrc_t krb5_conf_t:file r_file_perms;

