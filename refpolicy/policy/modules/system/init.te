	allow initrc_t { etc_t device_t }:dir setattr;

	# for storing state under /dev/shm
	allow initrc_t tmpfs_t:dir setattr;
	file_type_auto_trans(initrc_t, tmpfs_t, fixed_disk_device_t, blk_file)
