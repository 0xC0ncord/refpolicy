########################################
## <summary>
##	All of the rules required to
##	administrate a container
##	environment.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`container_admin',`
	gen_require(`
		attribute svirt_lxc_domain;
		type svirt_lxc_file_t;
	')

	allow $1 svirt_lxc_domain:process { ptrace signal_perms };
	ps_process_pattern($1, svirt_lxc_domain)

	files_search_var_lib($1)
	admin_pattern($1, svirt_lxc_file_t)
')
